@page
@model Project_test.Pages.HomeModel
@{
}
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Products and Services</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter" id="productList">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @product.Category">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="data:image;base64,@Convert.ToBase64String(product.ImageData)">
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="/ProductView?ProductID=@product.ProductID&FreelancerID=@product.FreelancerID">@product.Name</a></h6>
                            <h5>@product.Price</h5>
                        </div>
                    </div>
                </div>
            }

            @foreach (var service in Model.Services)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @service.Category">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="data:image;base64,@Convert.ToBase64String(service.ImageData)">
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="/ServiceView?ServiceID=@service.serviceID">@service.Name</a></h6>
                            <h5>@service.Price</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

