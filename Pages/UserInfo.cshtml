@page
@model Project_test.Pages.FreeLancer_infoModel
@{
}

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="./img/profile.png" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.FreelancerName</h5>
                        @if (Model.Role == "freelancer")
                        {
                            <p class="text-muted mb-4">@Model.WorkingHours</p>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="/OfferedSP"><button type="button" class="btn btn-outline-primary ms-1">View Offered P/S</button></a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="/ServiceStatus"><button type="button" class="btn btn-outline-primary ms-1">Update Service Status</button></a>
                            </div>
                        }
                        @if (Model.Role == "freelancer" || Model.Role == "customer")
                        {
                            <div class="d-flex justify-content-center mb-2">
                                <a href="/ChangePass">
                                    <button type="button" class="btn btn-outline-primary btn-success ms-1 text-white">Change Account Password</button>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                @if (Model.Role == "freelancer")
                {
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <p class="text-muted mb-1 font-weight-bold">Services To-Do</p>
                                    @foreach (var serviceItem in Model.ServiceList)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                            <a href="#" class="mb-0" style="color: #7fad39;">@serviceItem</a>
                                        </li>
                                    }
                            </ul>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.FreelancerName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Location</p>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.Role == "freelancer")
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4 mb-md-0">
                                <div class="card-body">
                                    <p class="mb-4">
                                        <span class="text-primary font-italic me-1">About Me</span>
                                    </p>
                                    <p class="mb-1" style="font-size: .77rem;">@Model.WorkExperience</p>
                                    <br /><br />
                                    <div class="d-flex justify-content-center mb-2">
                                        <a href="/AddSP"><button type="button" class="btn btn-outline-primary ms-1">Add Product</button></a>
                                        <a href="/AddSP2"><button type="button" class="btn btn-outline-primary ms-1">Add Service</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-4 mb-md-0">
                                <div class="card-body">
                                    <p class="mb-4">
                                        <span class="text-primary font-italic me-1">My Projects</span>
                                    </p>

                                    @if (Model.ProjectNames != null && Model.ProjectNames.Count > 0)
                                    {
                                        @for (int i = 0; i < Model.ProjectNames.Count; i++)
                                        {
                                            <p class="mb-1" style="font-size: .77rem;">@Model.ProjectNames[i]</p>
                                            <p class="mb-1" style="font-size: .77rem;">@Model.ProjectDescriptions[i]</p>
                                        }
                                    }
                                    else
                                    {
                                        <p>No projects found.</p>
                                    }

                                    <br /><br />
                                    <div class="d-flex justify-content-center mb-2">
                                        <a href="/AddProject"><button type="button" class="btn btn-outline-primary ms-1">Add Project</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

