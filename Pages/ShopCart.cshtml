}
<style>
.pro-qtyJO input {
    height: 100%;
    width: 100%;
    font-size: 16px;
    color: #6f6f6f;
    width: 50px;
    border: none;
    background: #f5f5f5;
    text-align: center;
}

    #logoutButton {
        background-color: #4CAF50; /* Green */
        color: white;
        padding: 10px 17px;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        float: right; /* Add this line */
    }

.pro-qtyJO .qtybtnJO {
    width: 35px;
    font-size: 16px;
    color: #6f6f6f;
    cursor: pointer;
    display: inline-block;
}


.pro-qtyJO .qtybtnJO {
    width: 30px;
    height: 30px;
    background: #f5f5f5;
    border: none;
    color: #6f6f6f;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

    .pro-qtyJO .qtybtnJO:hover {
        background-color: #e0e0e0;
    }

.pro-qtyJO input {
    height: 30px;
    width: 50px;
    font-size: 16px;
    color: #6f6f6f;
    border: none;
    background: #f5f5f5;
    text-align: center;
    display: inline-block;
}

.pro-qtyJO .qtybtnJO.plus {
    margin-left: 5px;
}
</style>

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Products.Any())
                            {
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <h5>@product.Name</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            $@product.Price.00
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <form method="post">
                                                    <input type="hidden" name="updatedProductId" value="@product.ProductID" />
                                                    <div class="pro-qtyJO">
                                                        <button type="submit" name="updatedQuantity" value="decrease" class="qtybtnJO minus">-</button>
                                                        <input type="text" name="updatedQuantity" value="@product.Quantity" class="quantity-input" readonly />
                                                        <button type="submit" name="updatedQuantity" value="increase" class="qtybtnJO plus">+</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            $@(product.Price * product.Quantity).00
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <span class="icon_close"></span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10">
                                        Your cart has no Products.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <section class="shoping-cart spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Services</th>
                                        <th>Price</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Services.Any())
                                    {
                                        @foreach (var Service in Model.Services)
                                        {
                                            <tr>
                                                <td class="shoping__cart__item">
                                                    <h5>@Service.Name</h5>
                                                </td>
                                                <td class="shoping__cart__total">
                                                    $@Service.Price.00
                                                </td>
                                                <td class="shoping__cart__item__close">
                                                    <span class="icon_close"></span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="10">
                                                Your cart has no Services.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @* <form method="post">
                    <button type="submit" id="logoutButton">Update Cart</button>
                </form> *@

                <div class="row">
                    <div class="col-lg-12">
                        <div class="shoping__cart__btns">
                            <a href="/Index" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="shoping__checkout">
                            <h5>Cart Total</h5>
                            <ul>
                                <li>Total <span>$@Model.Total.00</span></li>
                            </ul>
                            <a href="/Checkout" class="primary-btn">PROCEED TO CHECKOUT</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Shoping Cart Section End -->

